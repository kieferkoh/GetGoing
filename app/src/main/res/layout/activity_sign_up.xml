<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/newAcc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Make an account and GetGoing!"
        android:textSize="38sp" />


    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Phone Number:"
        android:textSize="23sp"

        />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter User Name:"
        android:padding="10dp"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Password:"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/edt_confirm_pass"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:hint="Confirm Password:"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="23sp" />

    <Button
        android:id="@+id/edt_btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Sign Up"
        android:backgroundTint="@color/white"
        android:textColor="@color/blueGreen"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/pale_logo"


        />
    <!--android:background="@drawable/g4"-->


</androidx.appcompat.widget.LinearLayoutCompat>