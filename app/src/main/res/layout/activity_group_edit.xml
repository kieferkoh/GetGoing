<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".GroupEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/whiterect"
        >
        <ImageButton
            android:id="@+id/backToGroupProfile"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            />

        <TextView
            android:id="@+id/header"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Edit Group Name"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/desc"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:text="Other group members will be notified after the group name is changed"
        />

    <LinearLayout
        android:id="@+id/group_display"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/whiterect"
        >
        <ImageView
            android:id="@+id/group_dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/groupprofile"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="15dp"
            />

        <EditText
            android:id="@+id/change_group_name"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:text="Group3 (:"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            />


    </LinearLayout>
    <Button
        android:id="@+id/goToGroupProfile"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="154dp"
        android:text="OK"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/lightBlue"
        android:textColor="@color/black"

        />


</androidx.appcompat.widget.LinearLayoutCompat>