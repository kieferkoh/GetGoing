<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainScreen">

    <TextView
        android:id="@+id/dlASK"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="What would you like to do today?"
        android:textSize="38sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/friend"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="150dp"
        android:layout_marginLeft="-85dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="80dp"
        android:text="View Friends"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlASK" />

    <TextView
        android:id="@+id/group"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="150dp"
        android:layout_marginStart="30dp"
        android:text="View Groups"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/dlASK"
        app:layout_constraintLeft_toRightOf="@+id/friend" />


    <ImageButton
        android:id="@+id/friendPageBut"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/friend"
        android:layout_marginStart="-170dp"
        android:background="@drawable/background2"
        app:layout_constraintTop_toBottomOf="@+id/friend"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageButton
        android:id="@+id/groupPageBut"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/group"
        android:layout_marginEnd="-170dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/group"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/pale_logo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/SignOut"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:text="Sign Out"
        android:textColor="@color/grey"
        android:translationX="15dp"
        android:translationY="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>



